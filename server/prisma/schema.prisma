model User {
  id             String     @id @default(uuid())
  firstName      String?    
  lastName       String?    
  email          String     @unique
  password       String
  googleProvided String?   
  provider       String     @default("credentials")
  products       Product[]  @relation("UserProducts")
  reviews        Reviews[]  @relation("UserReviews")  // âœ… <-- Add this line
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Product {
  id            String     @id @default(uuid())
  productName   String
  description   String
  price         String
  rating        Float
  recommendFor  RecommendFor
  size          Size
  wishlist      String
  userId        String
  user          User       @relation(fields: [userId], references: [id], name: "UserProducts")
  imageKeys     String[]
  reviews       Reviews[]
}

model Reviews {
  id         String   @id @default(uuid())
  productId  String
  userId     String
  comment    String
  rating     String
  createdAt  DateTime @default(now())

  product    Product  @relation(fields: [productId], references: [id])
  user       User     @relation(fields: [userId], references: [id], name: "UserReviews")
}
